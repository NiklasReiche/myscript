expression :=
    operation
    Id
    Number
    Boolean

Boolean :=
    true
    false

operation :=
    operator
    control
    (let Id expression expression)
    (rec Id expression expression)
    (fun Id* expression)
    (app Id expression*)

operator :=
    (+ expression+)
    (- expression+)
    (* expression expression+)
    (/ expression expression+)
    (& expression+)
    (| expression+)
    (! expression)
    (= expression expression)
    (< expression expression)
    (> expression expression)

control :=
    (if expression expression expression)
